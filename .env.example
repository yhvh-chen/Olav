# OLAV v0.8 Environment Configuration
# This is your local configuration - never commit to git
# See .env.example for all available options

# ============================================================================
# LLM Configuration
# ============================================================================

# LLM Provider: openai, ollama, or azure
LLM_PROVIDER=openai

# OpenAI Configuration
LLM_API_KEY=sk-test-key-for-development
LLM_MODEL_NAME=gpt-4-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Ollama Configuration (used if LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# Embedding Configuration
# ============================================================================

EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_API_KEY=${LLM_API_KEY}

# ============================================================================
# Database Configuration
# ============================================================================

# DuckDB Database (local file)
DUCKDB_PATH=.olav/capabilities.db

# PostgreSQL (for future use)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=olav
POSTGRES_PASSWORD=dev-password
POSTGRES_DB=olav
POSTGRES_URI=postgresql://olav:dev-password@localhost:5432/olav

# ============================================================================
# Network Device Credentials
# ============================================================================

# Default device connection parameters
DEVICE_USERNAME=admin
DEVICE_PASSWORD=password
DEVICE_TIMEOUT=30
DEVICE_CONNECTION_OPTIONS={}

# ============================================================================
# NetBox Configuration (Single Source of Truth)
# ============================================================================

NETBOX_URL=http://localhost:8000
NETBOX_TOKEN=your-netbox-token-here
NETBOX_SSL_VERIFY=true

# ============================================================================
# Application Settings
# ============================================================================

# OLAV Mode: QuickTest or Production
OLAV_MODE=QuickTest

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable network relevance guard (skip non-network queries)
GUARD_ENABLED=true

# ============================================================================
# Optional: Redis Configuration
# ============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================================================
# Optional: OpenSearch Configuration
# ============================================================================

OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin

# ============================================================================
# Optional: Nornir SSH Settings
# ============================================================================

SSH_CONFIG_FILE=${HOME}/.ssh/config
SSH_PRIVATE_KEY=${HOME}/.ssh/id_rsa
