{
  "agent": {
    "name": "OLAV",
    "description": "Network Operations AI Assistant",
    "version": "0.8"
  },
  "llm": {
    "provider": "openai",
    "model": "x-ai/grok-4.1-fast",
    "temperature": 0.1,
    "max_tokens": 4096
  },
  "capabilities": {
    "db_path": ".olav/capabilities.db",
    "auto_refresh": true
  },
  "security": {
    "hitl_required_for": ["write", "configure", "delete"],
    "command_blacklist": ".olav/imports/commands/blacklist.txt"
  },
  "inspection": {
    "defaultTemplate": "health-check",
    "maxDevices": 100,
    "maxWorkers": 10,
    "timeout": 30,
    "reportFormat": "html",
    "saveReports": true,
    "reportDir": ".olav/reports",
    "checkTypes": ["health-check", "bgp-audit", "interface-errors", "security-baseline"],
    "refreshInterval": 3600
  }
}
